extends layout
block content

  h2 Login
  - if (message.length)
    p.alert.alert-error=message
  form#login-form.well(action='/login', method='POST')
    #login
      label(for='username') Username
      input.span3(type='text', name='username')
    #password
      label(for='password') Password
      input.span3(type='password', name='password')
    #submit
      input.btn(type='submit', value='Submit')
    br
    span.help-block Not registered?
    a(href='/register') Register

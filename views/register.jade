extends layout
block content

  h2 Register
  - if ('undefined' !== typeof errors && errors.length)
    ul#errors
      - each error in errors
        li.error= error
  form.well(action='/register', method='POST')
    #login
      label(for=everyauth.password.loginFormFieldName) Login
      input.span3(type='text', name=everyauth.password.loginFormFieldName, value=userParams[everyauth.password.loginFormFieldName])
    #email
      label(for=everyauth.password.emailFormFieldName) Email
      input.span3(type='text', name='email', value=userParams['email'])
    #password
      label(for=everyauth.password.passwordFormFieldName) Password
      input.span3(type='password', name=everyauth.password.passwordFormFieldName)
    #submit
      input.btn(type='submit') Register
